{
    "editor.formatOnPaste": true,
    "window.zoomLevel": 0,
    "workbench.colorCustomizations": {
        "editorLineNumber.foreground": "#ffe600"
    },
    "editor.lineNumbers": "relative",

    "vim.easymotion": true,
    "vim.sneak": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": false,
    "vim.hlsearch": true,
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "j"
            ],
            "after": [
                "<Esc>"
            ]
        },
        {
            "before": [
                "<leader>",
                ";"
            ],
            "after": [
                "<Esc>","$","a",";"
            ]
        },
        {
            "before": [
                "<leader>",
                "l"
            ],
            "after": [
                "<Esc>",
                "$",
                "a"
            ]
        },
        {
            "before": [
                "<leader>",
                "h"
            ],
            "after": [
                "<Esc>","^","i"
            ]
        },
        {
            "before": [
                "<leader>",
                "d",
                "d"
            ],
            "after": [
                "<Esc>",
                "d",
                "d"
            ]
        },
    ],
    "vim.otherModesKeyBindingsNonRecursive": [
        {
            "before":[
                "<leader>",
                "l"
            ],
            "after":[
                "$"
            ]
        },
        {
            "before": [
                "<leader>",
                "c"
            ],
            "after": [
                "^","C"
            ]
        },
        {
            "before":[
                "<leader>",
                "h"
            ],
            "after":[
                "^"
            ]
        },
        {
            "before": [
                "s"
            ],
            "after": [
                "a","<BS>"
            ]
        },
        {
            "before": [
                "<leader>",
                ";"
            ],
            "after": [
                "$","a",";","<Esc>"
            ]
        },
        {
            "before": [
                "<leader>",
                "d"
            ],
            "after": [
                "y",
                "y",
                "p"
            ]
        },
        {
            "before": [
                "<C-n>"
            ],
            "after": [],
            "commands": [
                {
                    "command": ":nohl"
                }
            ]
        },
        {
            "before": [
                "<leader>", 
                "m"
            ],
            "after": [],
            "commands": [
                {
                    "command": "editor.action.formatDocument"
                }
            ]
        },
        {
            "before": [
                "g",
                "c",
                "c"
            ],
            "after": [],
            "commands": [
                {
                    "command": "editor.action.commentLine"
                }
            ]
        }
    ],
    "vim.leader": "z",
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": false
    },
    "editor.multiCursorModifier": "alt",
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "html",
        "vue"
    ],
    "eslint.options": {
        "plugins": [
            "html"
        ]
    }
}